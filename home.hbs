{{!< default}}

{{!-- The main content area --}}
{{#page}}
    {{> header}}

    <main id="site-main" class="site-main">

        {{!-- Hero image --}}
        <section id="home" class="bg-light overflow-hidden">
            <div class="container">
                <div class="row py-5 align-items-center">
                    <div class="col-lg-5 col-xl-4">
                        <h1 class="display-4 mb-3 text-primary fw-bold">{{title}}</h1>
                        <div class="mb-3 text-dark">{{excerpt}}</div>
                        {{> subscribe-form}}
                    </div>
                    <div class="col-lg-7 col-xl-8">
                        {{#if feature_image}}
                            {{> feature-image}}
                        {{else}}
                            <img class="col-12 col-xl-auto"
                                 src="{{asset "images/home-banner-v2.svg"}}"
                                 alt="Home banner">
                        {{/if}}
                    </div>
                </div>
            </div>
        </section>
        {{!-- Hero image --}}

        <section id="about" class="py-5">
            <div class="container text-center section-title my-5">
                {{content}}
            </div>
        </section>

        {{!- Recent blog posts --}}
        <section id="blog" class="py-5 bg-light">
            <div class="container">
                <div class="row justify-content-center text-center pb-5">
                    <div class="col-lg-8 col-xl-6">
                        <h2 class="h1 mb-3">Daily updates</h2>
                        <p class="m-0">The most recent content from the blog - automatically updated when you create a new post.</p>
                    </div>
                </div>
                <div class="row row-cols-lg-3">
                    {{#get "posts" order="published_at desc" include="authors" limit="3"}}
                        {{#foreach posts}}
                            {{> post-card }}
                        {{/foreach}}
                    {{/get}}
                </div>
            </div>
        </section>
        {{!- Recent blog posts --}}

        {{!- Contact form --}}
        <section id="contact" class="py-5">
            <div class="container">
                <div class="row justify-content-center text-center pb-5">
                    <div class="col-lg-8 col-xl-6">
                        <h3 class="h1 mb-3">Let's start working together</h3>
                        <p class="m-0">Live contact form powered by your Mindspun site.</p>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-8 my-3">
                        <div class="bg-white shadow p-4 p-lg-6">
                            <div class="pb-4">
                                <div class="h5 fw-bold m-0">Contact</div>
                            </div>
                            <form data-form-type="contact">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label for="contact-name" class="form-label">Name</label>
                                            <input id="contact-name" type="text" name="name" placeholder="Rachel Roth"
                                                   data-constraints="@Required" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-4">
                                            <label for="contact-email" class="form-label">Email address</label>
                                            <input id="contact-email" type="email" name="email"
                                                   placeholder="name@example.com" data-constraints="@Required"
                                                   class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="mb-4">
                                            <label for="contact-message" class="form-label">Comment</label>
                                            <textarea class="form-control" id="contact-message" name="message" rows="3"
                                                      placeholder="Hi there, I would like to ..."
                                                      data-constraints="@Required"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <input name="location" type="hidden" value="{{@site.url}}/#thank-you">
                                        <button class="btn btn-primary" type="submit">Send</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        {{!- Contact form --}}
    </main>

{{/page}}
