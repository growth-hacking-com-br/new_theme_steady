{{#if isSecondary}}
    <ul class="nav">
        {{#foreach navigation}}
            <li class="nav-{{slug}}">
                <a class="link-light text-decoration-none me-3" href="{{url}}">{{label}}</a>
            </li>
        {{/foreach}}
    </ul>
{{else}}
    
        {{#foreach navigation}}
            <li class="{{link_class for=(url) class=(concat "nav-" slug)}}">
                <a class="nav-link p-lg-3 link-dark" href="{{url absolute="true"}}">{{label}}</a>
            </li>
        {{/foreach}}
    
{{/if}}